# Environment Variables
# Copy this file to .env and fill in your values

# Notion API
NOTION_API_KEY=ntn_your_notion_integration_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Server
PORT=3000
NEXT_PUBLIC_BLAZION_API_URL=http://localhost:3000

# Optional overrides
DATABASE_PATH=./data/blog.db
SYNC_INTERVAL=*/30 * * * *
IMAGE_REFRESH_INTERVAL=0 * * * *
SYNC_HINT_ENABLED=true
IMAGE_URL_REFRESH_BUFFER_SECONDS=300
IMAGE_URL_REFRESH_COOLDOWN_SECONDS=60
RECOMMENDATION_DEFAULT_LIMIT=3
RECOMMENDATION_MAX_LIMIT=6
RECOMMENDATION_WEIGHT_RELATED=100
RECOMMENDATION_WEIGHT_TAG=20
RECOMMENDATION_WEIGHT_SEGMENT=12
RECOMMENDATION_WEIGHT_FEATURED=8
RECOMMENDATION_WEIGHT_RECENCY=6
RECOMMENDATION_RECENCY_WINDOW_DAYS=30
SYNC_PUBLIC_ONLY=true

# CORS and API hardening
CORS_ORIGINS=http://localhost:3001
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=60
API_RATE_LIMIT_POSTS_MAX=120
API_RATE_LIMIT_CONTENT_MAX=30
API_RATE_LIMIT_SYNC_MAX=2
SYNC_ADMIN_API_KEY_ENABLED=false
SYNC_ADMIN_API_KEY=your_sync_admin_key_here
NEXT_PUBLIC_SYNC_HINT_ENABLED=true

# Optional Giscus comments
NEXT_PUBLIC_GISCUS_REPO=owner/repo
NEXT_PUBLIC_GISCUS_REPO_ID=R_kgDO_exampleRepoId
NEXT_PUBLIC_GISCUS_CATEGORY=General
NEXT_PUBLIC_GISCUS_CATEGORY_ID=DIC_kwDO_exampleCategoryId
NEXT_PUBLIC_GISCUS_MAPPING=pathname

# Optional socials (used by the right-side social dock)
SOCIAL_LINKEDIN=
SOCIAL_X=
SOCIAL_INSTAGRAM=
SOCIAL_LINKTREE=
SOCIAL_EMAIL=
SOCIAL_PHONENUMBER=
SOCIAL_FACEBOOK=
SOCIAL_GITHUB=
