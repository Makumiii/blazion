{
    "name": "@blazion/core-api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "test": "bun test tests",
        "test:smoke": "bun test tests/api.integration.test.ts",
        "test:unit": "bun test tests/pack-resolution.test.ts",
        "setup": "bun run src/cli/setup.ts"
    },
    "dependencies": {
        "@blazion/pack-blog-api": "workspace:*",
        "@blazion/shared": "workspace:*",
        "@notionhq/client": "^2.2.0",
        "croner": "^8.0.0",
        "hono": "^4.0.0",
        "hono-rate-limiter": "^0.5.3",
        "notion-client": "^6.16.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5.3.0"
    }
}
